                              field. (For this we must have an action.) -->
            <kanban class="o_kanban_mobile">
                <field name="photo"/>
                <field name="id"/>
                <field name="colors"/>
                <field name="salary_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.colors.raw_value)}">
                            <div class="o_kanban_image">
                                <img alt="Image"
                                     class="oe_avatar"
                                     t-att-src="kanban_image('team.team', 'photo', record.id.raw_value)"/>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <br/>
                                    <field name="department_id"/>
                                    <br/>
                                    <field name="skill_ids"/>
                                </div>
                            </div>
                            <div class="o_dropdown_kanban dropdown">
                                <a role="button" class="dropdown-toggle o-no-caret btn"
                                   data-toggle="dropdown"
                                   data-display="static"
                                   href="#"
                                   area-lable="dropdown menu"
                                   title="Edit">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <div>
                                        <ul class="oe_kanban_colorpicker" data-field="colors"/>
                                        <div role="separator" class="dropdown-divider"/>
                                        <div role="menuitem">
                                            <a class="dropdown-item o_kanban_toggle_fold" type="edit">Edit</a>
                                        </div>
                                        <div role="separator" class="dropdown-divider"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

