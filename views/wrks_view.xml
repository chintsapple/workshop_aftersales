    <!--  Kanban View of Team  -->
    <record id="kanban_view_team" model="ir.ui.view">
        <field name="name">kanban.view.team</field>
        <field name="model">team.team</field>
        <field name="arch" type="xml">
            <!--  TODO: 5.19. Create a kanban view to display only fields of a record.
                        5.20. Add an image on the kanban view.
                        5.21. Add a color index field on a model and display the color on the kanban view. Add
                              a color picker on the kanban view to choose the color.
